# Doodle Digest Backend Environment Variables
# Copy this file to .env and fill in the values

# Required: MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/doodle-digest

# Required: JWT Secret (use a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Optional: OpenAI API Key for AI features
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Development mode
NODE_ENV=development

# Optional: Server port (default: 5001)
PORT=5001

# Optional: OpenAI Model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Optional: Image generation settings
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_IMAGE_SIZE=512x512
ENABLE_IMAGE_GENERATION=true
OPENAI_IMAGE_MAX_PER_DOC=4
OPENAI_IMAGE_RATE_PER_MIN=5
